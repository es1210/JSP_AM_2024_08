package com.KoreaIT.java.jsp.AM;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;

@WebServlet("/printDan")
public class PrintDanServlet extends HttpServlet {

	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {

		response.setContentType("text/html;charset=UTF-8");

		// URL 파라미터에서 dan, limit, color 값을 가져옵니다.
		String danParam = request.getParameter("dan");
		String danlimit = request.getParameter("limit");
		String color = request.getParameter("color");

		// dan, limit 기본값 설정
		if (danParam == null) {
			danParam = "1";
		}
		if (danlimit == null) {
			danlimit = "1";
		}
		if (color == null) {
			color = "black"; // 기본 색상을 검정색으로 설정
		}

		int dan = Integer.parseInt(danParam);
		int limit = Integer.parseInt(danlimit);

		response.getWriter().append(String.format("<span style='color:%s;'>==%d단==<br></span>", color, dan));

		for (int i = 1; i <= limit; i++) {
			response.getWriter().append(String.format("<span style='color:%s;'>%d * %d = %d<br></span>", color, dan, i, dan * i));
		}
	}
}
